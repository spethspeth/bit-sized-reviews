<h1> <%= @game.name %> </h1>
<div data-controller="reviews">
  <div data-reviews-target="review">
    <% unless @game.reviews.nil?%>
        <% @game.reviews.each do |review| %>
          <%= render 'review', review: review %>
        <%end%>
    <% end %>
  </div>

  <div data-controller="newreview">
    <button type="button" class="nes-btn is-primary" data-action="click->newreview#display">Review</button>
    <div data-newreview-target="form" class="d-none">
      <%= render 'reviews/new' %>
    </div>
  </div>
</div>
