<div class="nes-container is-dark with-title">
  <p class="title"> <%= review.title %>
    <% review.rating.times do %>
      <i class="nes-icon is-small star"></i>
    <%end%>
  </p>
  <p> <%= review.content %> </p>
  <%= link_to "<button type='button' class='nes-btn is-warning'>Edit</button>".html_safe, edit_review_path(review) %>
  <%= link_to "<button type='button' class='nes-btn is-error'>Delete</button>".html_safe, review_path(review), method: :delete, data: { confirm: "Are you sure you want to delete this review?" } %>
</div>
