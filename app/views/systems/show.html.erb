<div class="container">
  <div class="nes-container with-title is-centered">
    <p class="title"><%= @system.name %></p>
    <p>Released:<%= @system.year %></p>
    <p>Company: <%= @system.company %></p>
  </div>
</div>
<br>
<div class="nes-container with-title is-centered">
  <p class="title">Games on <%= @system.name %></p>
  <ul>
    <% @games.each do |game| %>
      <li><%= game.name %></li>
    <% end %>
  </ul>
</div>
