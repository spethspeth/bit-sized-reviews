<%= simple_form_for([@game, @review], data: { reviews_target: "form", action: "submit->reviews#send"}) do |f| %>
  <%= f.input :title, class: "nes-field" %>
  <%= f.input :content, class: "nes-textarea" %>
  <%= f.input :rating, collection: [["Awful",1], ["Meh", 2], ["Average", 3], ["Pretty funny", 4], ["Absolutely awesome", 5]], input_html: {data: {controller: "starrating"}}%>
  <%= f.button :submit, class: "nes-btn is-primary" %>
<% end %>
